<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-md-6">
      <form method="post" action="/registerUser" class="form-sm border rounded p-4" style="background-color: white;">
        <h2 class="text-center mb-4">User Registration</h2>
        <div class="form-group">
          <label for="name">Name</label>
          <input id="name" class="form-control" type="text" name="name" placeholder="Enter your name">
        </div>
        <div class="form-group">
          <label for="username">Username</label>
          <input id="username" class="form-control" type="text" name="username" placeholder="Enter your username">
        </div>
        <div class="form-group">
          <label for="email">Email</label>
          <input id="email" class="form-control" type="email" name="email" placeholder="Enter your email">
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input id="password" class="form-control" type="password" name="password" placeholder="Enter your password">
        </div>
        <div class="form-group">
          <label for="password2">Confirm Password</label>
          <input id="password2" class="form-control" type="password" name="password2" placeholder="Confirm your password">
        </div>
        <!-- Updated button style -->
        <button class="btn btn-primary btn-block" type="submit" style="background-color: rgb(23, 132, 204);">Register</button>
        <p class="text-center mt-3">Already have an account? <a class="btn btn-warning btn-sm" href="/login">Login Now</a></p>
      </form>
    </div>
  </div>
</div>
